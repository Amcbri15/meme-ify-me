<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0630">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/nul"
        android:focusableInTouchMode="true"
        android:cropToPadding="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/jv_button"
        android:textColor="#0D0630"
        android:text="@string/nul2"
        android:id="@+id/button_share"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/nul2"
        android:elegantTextHeight="true" />

<!-- -   android:text="Share"
        android:id="@+id/share_picture_share_button"
        android:layout_gravity="center_horizontal" - -->

</LinearLayout>